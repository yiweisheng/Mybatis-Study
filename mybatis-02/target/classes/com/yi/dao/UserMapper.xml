<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--namespace=绑定一个对应的Dao/Mapper接口-->
<mapper namespace="com.yi.dao.UserMapper">

<!--    select查询语句-->
    <select id="getUserList" resultType="User">
        select * from mybatis.user
    </select>
    <select id="getUserById" parameterType="int" resultType="com.yi.pojo.User">
        select * from mybatis.user where id = #{id}
    </select>
<!--    对象中的属性可以直接取出来-->
    <insert id="addUser" parameterType="com.yi.pojo.User">
        insert into mybatis.user (id,name,pwd) values (#{id},#{name},#{pwd});
    </insert>
    <update id="updateUser" parameterType="com.yi.pojo.User">
        update mybatis.user set name=#{name},pwd=#{pwd} where id=#{id};
    </update>
    <delete id="deleteUser" parameterType="int">
        delete from mybatis.user where id=#{id};
    </delete>
</mapper>

















